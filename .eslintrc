{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "no-console": ["error", { allow: ["warn", "error"] }],
        "ecmaFeatures": {
            "jsx": 1,
        }
    },
    "plugins": [
        "react",
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
        "comma-dangle" : 0,
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "0.14.8"
        }
    },
    "globals": {
        "window": 1,
        "require" : 1,
        "describe" : 1,
        "it" : 1,
        "expect" : 1
    }
}
